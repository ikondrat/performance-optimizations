
{
  "extends": [
      "formidable/configurations/es6-react"
  ],
  "rules": {
    "indent": ["error", 4],
    "max-len": 0,
    "quotes": ["warning", "single", { "allowTemplateLiterals": true }],
    "no-magic-numbers": 0,
    "react/prefer-es6-class": 0,
    "react/no-multi-comp": 0
  },
  "env": {
    "browser": true,
    "node": true
  },
  "globals" : {
    "afterEach": true,
    "describe": true,
    "expect": true,
    "it": true,
    "jest": true,
    "test": true
  }
}
